<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.vueadminjava2.dao.SysRoleMenuDao">

    <resultMap type="com.example.vueadminjava2.entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMenuMap">
        select id,
               role_id,
               menu_id
        from vueadmin.sys_role_menu
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleMenuMap">
        select id,
               role_id,
               menu_id
        from vueadmin.sys_role_menu limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleMenuMap">
        select
        id, role_id, menu_id
        from vueadmin.sys_role_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vueadmin.sys_role_menu(role_id, menu_id)
        values (#{roleId}, #{menuId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vueadmin.sys_role_menu(role_id, menu_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.menuId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vueadmin.sys_role_menu(role_id, menu_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.menuId})
        </foreach>
        on duplicate key update
        role_id = values(role_id) , menu_id = values(menu_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vueadmin.sys_role_menu
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="menuId != null">
                menu_id = #{menuId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from vueadmin.sys_role_menu
        where id = #{id}
    </delete>

</mapper>

